{
  "name": "eventual-gram-ssb",
  "version": "0.0.2",
  "description": "ssb photo sharing",
  "main": "public/main.js",
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "scripts": {
    "dist": "electron-builder -c.snap.publish=github --mac --windows --linux",
    "release": "electron-builder --mac --windows --linux --publish=always",
    "tron": "env $(cat .env | xargs) electron .",
    "open": "npm run build-css && concurrently --kill-others \"node src/server/index.js\" \"npm run serve\" \"npm run sass-watch\"",
    "serve": "budo index.js:bundle.js --pushstate --dir=public --live -- -p esmify -t [ babelify ] -t [ envify --NODE_ENV development ] -t uglifyify -dv",
    "build": "npm run build-js && npm run build-css",
    "build-js": "browserify -p esmify -p bundle-collapser/plugin index.js -t [ envify --NODE_ENV production ] -t [ babelify ] -g unassertify -g uglifyify -mc > public/bundle.js",
    "test": "tape test/{**/*,*}.js",
    "test-browser": "concurrently --kill-others \"NODE_ENV=\"test\" node src/server.js\" \"browserify -t babelify test-browser/index.js | htmlify test-browser/index.html | tape-run --input html | tap-spec\"",
    "build-css": "node-sass --output-style=compressed src/view/style/main.scss > public/style.css",
    "sass-watch": "node-sass --watch src/view/style/main.scss --source-map-embed public/style.css",
    "preversion": "npm run lint && npm test",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "lint": "eslint . --config .eslintrc",
    "cy:open": "concurrently --kill-others \"NODE_ENV=test npm run open\" \"cypress open\"",
    "start": "env $(cat .env | xargs) npm run open"
  },
  "keywords": [],
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@nichoth/catch-routes": "^1.0.3",
    "@nichoth/events": "^1.1.2",
    "@nichoth/ssb-tags": "0.0.6",
    "after": "^0.8.2",
    "filereader-pull-stream": "^1.0.0",
    "flumecodec": "0.0.1",
    "flumeview-reduce": "^1.3.17",
    "hashtag": "0.0.1",
    "htm": "^3.0.4",
    "lodash": "^4.17.20",
    "mutant": "^3.29.0",
    "muxrpc": "^6.5.0",
    "observ": "^0.2.0",
    "observ-struct": "^6.0.0",
    "obv": "0.0.1",
    "preact": "^10.4.7",
    "pull-file-reader": "^1.0.2",
    "pull-stream": "^3.6.14",
    "pull-ws": "^3.3.2",
    "rimraf": "^3.0.2",
    "run-parallel": "^1.1.9",
    "run-series": "^1.1.8",
    "ruta3": "^2.0.1",
    "scuttle-tag": "^0.5.0",
    "ssb-avatar": "^0.2.0",
    "ssb-backlinks": "^2.1.0",
    "ssb-blobs": "^1.2.3",
    "ssb-caps": "^1.1.0",
    "ssb-config": "^3.4.4",
    "ssb-db": "^20.3.0",
    "ssb-friends": "^4.2.0",
    "ssb-gossip": "^1.1.1",
    "ssb-invite": "^2.1.6",
    "ssb-marked": "^0.7.4",
    "ssb-master": "^1.0.3",
    "ssb-msg-content": "^1.0.1",
    "ssb-plugins": "^1.0.4",
    "ssb-replicate": "^1.3.2",
    "ssb-serve-blobs": "^2.4.0",
    "ssb-server": "^16.0.1",
    "ssb-tags": "^0.2.0",
    "suggest-box": "^2.2.3",
    "user-home": "^2.0.0",
    "xtend": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-plugin-module-resolver": "^4.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "budo": "^11.6.4",
    "bundle-collapser": "^1.4.0",
    "concurrently": "^5.2.0",
    "cypress": "^5.1.0",
    "electron": "^9.2.1",
    "electron-builder": "^22.8.0",
    "envify": "^4.1.0",
    "eslint": "^7.4.0",
    "eslint-config-minlint": "^2.0.0",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "esmify": "^2.1.1",
    "husky": "^4.2.5",
    "inline-htmlify": "^2.0.1",
    "node-sass": "^4.14.1",
    "ssb-feed": "^2.3.0",
    "ssb-keys": "^7.2.2",
    "tape": "^5.0.1",
    "tape-run": "^8.0.0",
    "uglify-js": "^3.10.0",
    "uglifyify": "^5.0.2",
    "unassertify": "^2.1.1"
  }
}
